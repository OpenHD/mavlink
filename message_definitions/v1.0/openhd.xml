		    <wip />
			<description>OPENHD_AIR_TELEMETRY</description>
			<field type="uint32_t" name="damaged_block_cnt">damaged_block_cnt</field>
			<field type="uint32_t" name="lost_packet_cnt">lost_packet_cnt</field>
